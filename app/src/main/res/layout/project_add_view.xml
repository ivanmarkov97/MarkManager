<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_project_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:theme="@style/AlertDialog.AppCompat.Light">
    </android.support.v7.widget.Toolbar>

    <EditText
        android:id="@+id/add_project_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_project_toolbar"
        android:hint="Name"/>

    <EditText
        android:id="@+id/add_project_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="140dp"
        android:gravity="top"
        android:layout_below="@+id/add_project_name"
        android:hint="Description"/>

    <Button
        android:id="@+id/add_project_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_project_description"
        android:layout_centerHorizontal="true"
        android:text="ДОБАВИТЬ" />

</RelativeLayout>
